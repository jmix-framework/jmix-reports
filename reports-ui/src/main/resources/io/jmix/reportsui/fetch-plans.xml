<fetchPlans xmlns="http://jmix.io/schema/core/fetch-plans">

    <fetchPlan entity="report_Report" name="report.browse" extends="_local">
        <property name="group"/>
        <property name="updateTs"/>
    </fetchPlan>

    <fetchPlan entity="report_Report" name="report.view">
        <property name="name"/>
        <property name="localeNames"/>
        <property name="code"/>
        <property name="description"/>
        <property name="reportType"/>
        <property name="group" fetchPlan="_local"/>
    </fetchPlan>

    <fetchPlan entity="report_Report" name="report.print">
        <property name="name"/>
        <property name="localeNames"/>
        <property name="description"/>
        <property name="templates"/>
        <property name="defaultTemplate"/>
        <property name="code"/>
        <property name="xml"/>
    </fetchPlan>

    <fetchPlan entity="report_ReportExecution" name="reportExecution.browse" extends="_local">
        <!--        <property name="fileUri" fetchPlan="_instance_name"/>-->
    </fetchPlan>

    <fetchPlan entity="report_Report" name="report.selectTemplate" extends="_instance_name">
        <property name="templates" fetchPlan="reportTemplate.withOutputType"/>
    </fetchPlan>

    <fetchPlan entity="report_ReportTemplate" name="reportTemplate.withOutputType" extends="_instance_name">
        <property name="reportOutputType"/>
        <property name="custom"/>
    </fetchPlan>
</fetchPlans>